# Database Configuration
ConnectionStrings__DefaultConnection=Server=(localdb)\\mssqllocaldb;Database=ClinicManagementDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true

# JWT Configuration - CRITICAL: Generate secure random keys for production
Jwt__Key=your-super-secure-jwt-key-at-least-32-characters-long-for-production
Jwt__Issuer=ClinicManagementAPI
Jwt__Audience=ClinicManagementClient
Jwt__ExpiryInMinutes=15
Jwt__RefreshTokenExpiryInDays=7

# SMTP Configuration - CRITICAL: Use app passwords or OAuth2 for production
Smtp__Host=smtp.gmail.com
Smtp__Port=587
Smtp__Username=your-email@gmail.com
Smtp__Password=your-app-password
Smtp__EnableSsl=true
Smtp__FrontendUrl=http://localhost:3000

# Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:7000

# Security Settings
JwtMiddleware__EnableDetailedLogging=false
JwtMiddleware__ClockSkew=00:01:00

# Rate Limiting
RateLimit__AuthEndpoint__PermitLimit=5
RateLimit__AuthEndpoint__WindowMinutes=1